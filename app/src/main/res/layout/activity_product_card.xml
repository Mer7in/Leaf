<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductCard"
    android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/PlaceImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="center"
                    android:background="@drawable/cardexample1"/>
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:background="@drawable/marketplace2">
                </LinearLayout>

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Star Plus Market"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:layout_margin="8dp"/>
                    <View
                        android:id="@+id/divider"
                        android:layout_width="285dp"
                        android:layout_height="2dp"
                        android:backgroundTint="#C4C4C4"
                        android:layout_gravity="center_vertical"
                        android:background="?android:attr/listDivider" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="47dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="8dp"
                        android:numStars="5"
                        android:rating="0"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        android:transformPivotX="0dp"
                        android:transformPivotY="0dp" />

                </LinearLayout>
                <ImageButton
                    android:id="@+id/marketLocation"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="center"
                    android:layout_gravity="right"
                    android:background="@color/colorPrimaryDark"
                    android:src="@drawable/ic_place_white_56dp"/>

            </LinearLayout>



        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>