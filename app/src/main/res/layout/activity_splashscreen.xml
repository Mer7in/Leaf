<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".splashscreen">
    <ImageView
        android:id="@+id/polygon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        android:src="@drawable/triangle" />

    <LinearLayout
        android:id="@+id/mainLY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splashlogo"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="50dp"
            android:src="@drawable/imagevector" />

        <LinearLayout
            android:id="@+id/innerLY"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/slpashtext1"
                android:layout_width="197dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed-light"
                android:lineHeight="70dp"

                android:text="Le"
                android:textAlignment="viewEnd"
                android:textColor="#fff"
                android:textSize="80sp" />

            <TextView
                android:id="@+id/splashtext1-1"
                android:layout_width="222dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed-light"
                android:lineHeight="70dp"
                android:paddingStart="15dp"
                android:text="af"
                android:textAlignment="textStart"
                android:textColor="#1FEE8B"
                android:textSize="80sp" />
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="167dp"
        android:layout_marginEnd="167dp"
        android:layout_marginBottom="102dp"
        android:background="#00FCFAFA"
        android:progressTint="#FCFDFD">

    </ProgressBar>


</RelativeLayout>